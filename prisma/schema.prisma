// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  username String @db.VarChar(20)
  password String
  email String @unique
  active Boolean? @default(false)
  tipo Int
  manager Manager[]
}


model Cliente {
  id String @id @default(uuid())
  nome String @db.VarChar(50)
  cpf String 
  logradouro String @db.VarChar(20)
  numero String @db.VarChar(5)
  bairro String @db.VarChar(20)
  estado String @db.VarChar(20)
  telefone String
  email String? @db.VarChar(30)
  manager Manager[]
}


model Servico{
  id String @id @default(uuid())
  servico String @db.VarChar(50)
  valor Float
  manager Manager[]
}


model Manager{
  id String @id @default(uuid())
  usuario User @relation(fields:[usuario_id], references:[id])
  usuario_id String
  cliente Cliente @relation(fields:[cliente_id], references:[id])
  cliente_id String
  servico Servico @relation(fields:[servico_id], references:[id])
  servico_id String
  quantidade Float
  valor_total Float?
  data DateTime 
  forma_pagamento Int
}
